<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.miss.imissyou.mycar.ui.TitleFragment
        android:id="@+id/changePhone_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!--改变用户手机或者亲人手机-->
        <EditText
            android:id="@+id/changePhoneNumber_phoneNumber_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mobile_phone"
            android:hint="请输入手机号码"
            android:textColorHint="@color/color_back_gui"
            android:textColor="@color/color_back_gui"
            android:textSize="15sp"
            android:inputType="phone"
            android:textStyle="bold" />

        <View
            style="@style/MissLineView"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/changePhoneNumber_code_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="输入验证码"
                android:textColorHint="@color/color_back_gui"
                android:textColor="@color/color_back_gui"
                android:textSize="15sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/changePhoneNumber_getCode_submit"
                android:layout_width="0dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:background="@color/color_submit_button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="获取验证码" />

        </LinearLayout>
        <View
            style="@style/MissLineView"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

        <Button
            android:id="@+id/changePhoneNumber_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:background="@color/color_submit_button"
            android:text="确认" />
    </LinearLayout>
</LinearLayout>