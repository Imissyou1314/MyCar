<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:gravity="center"
    android:background="@color/color_backgroud_gui"
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/car_list_item_carBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/card_view_white_item"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_list_item_carImage"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|left"
                    android:src="@mipmap/user_head" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/car_list_item_carbarnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical|left|bottom"
                            android:text="车牌  "
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/car_list_item_carOil_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:text="油量  "
                            android:textSize="12sp"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:id="@+id/car_list_item_carMalied_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="里程数  "
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/car_list_item_car_isSelect"
                    android:background="@mipmap/ic_car_select_icon"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"/>
        </LinearLayout>
</LinearLayout>