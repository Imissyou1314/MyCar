<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_blue_main">

    <!--TODO-->
    <!--提交加油信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="200dp">

        <!--加油站的标题信息-->
        <LinearLayout
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </LinearLayout>

        <!--线-->
        <View
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/color_back_gui"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <!--导航的标题-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">\

            <ImageView
                android:id="@+id/sumbit_navi_toGastion_image"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <TextView
                android:text="去这里"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="加油类型"
                android:textColor="@color/color_back"
                android:textSize="@dimen/FontSize" />

            <com.miss.imissyou.mycar.ui.spinner.NiceSpinner
                android:id="@+id/sumbitIndent_selectOilType"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sumbitIndent_oil_Price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_back"
                android:textSize="@dimen/SmallFontSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:text="升数:"
                android:textColor="@color/color_back"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:textSize="@dimen/FontSize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sumbitIndent_iloNumber_editInput"
                android:hint="请输入加油的总升数"
                android:textColor="@color/color_back"
                android:textStyle="bold"
                android:layout_gravity="center|left"
                android:textSize="@dimen/FontSize"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView

                android:text="总价:"
                android:textColor="@color/color_back"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:textSize="@dimen/FontSize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sumbitIndent_price_editInput"
                android:hint="请输入加油的总价"
                android:textColor="@color/color_back"
                android:textStyle="bold"
                android:layout_gravity="center|left"
                android:textSize="@dimen/FontSize"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/sumbitIndent_sumbit_btn"
                android:text="提交"
                android:gravity="center"
                android:textStyle="bold"
                style="@style/MissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>