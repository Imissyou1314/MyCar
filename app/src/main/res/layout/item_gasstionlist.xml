<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center"
    android:background="@color/color_carView_mainMesage"
    android:layout_height="match_parent">

    <!--加油站列表项-->
    <ImageView
        android:id="@+id/gasSattion_Item_Icon"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_petrochina_station_icon"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gasSattion_Item_stationName"
            android:textSize="@dimen/FontSize"
            android:textStyle="bold"
            android:textColor="@color/color_back"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_weight="1"
            android:text="未知"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gasSattion_Item_stationType"
            android:textSize="@dimen/SmallFontSize"
            android:textColor="@color/color_back"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="未知"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/gasSattion_Item_oilType"
            android:textSize="@dimen/SmallFontSize"
            android:textColor="@color/color_back"
            android:singleLine="true"
            android:text="未知"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="30dp" />
    </LinearLayout>

    <!--距离-->
    <TextView
        android:id="@+id/gasSattion_Item_diatance"
        android:text="公里"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/color_back_gui"
        android:textSize="@dimen/FontSize"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

</LinearLayout>