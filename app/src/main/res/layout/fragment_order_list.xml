<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miss="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:gravity="center|left"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.miss.imissyou.mycar.ui.RoundImageView
            android:id="@+id/order_list_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:src="@mipmap/user_head"
            miss:Radiustype="round"
            miss:borderRadius="8dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:paddingLeft="3dp"
            android:layout_marginTop="10dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/order_list_stationName"
                android:layout_marginTop="8dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="2dp"
                style="@style/MissTextViweStyle"
                android:text="中国加油站"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_list_gasType"
                style="@style/MissTextViweStyle"
                android:text="中国加油站"
                android:layout_marginBottom="2dp"
                android:gravity="center|left"
                android:layout_below="@+id/order_list_stationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_list_gasNumber"
                style="@style/MissTextViweStyle"
                android:text="中国加油站"
                android:layout_marginBottom="2dp"
                android:gravity="center|left"
                android:layout_below="@+id/order_list_gasType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_list_price"
                style="@style/MissTextViweStyle"
                android:text="中国加油站"
                android:layout_marginBottom="2dp"
                android:gravity="center|left"
                android:layout_below="@+id/order_list_gasNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_list_goStation"
            android:layout_width="0dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="到这里去"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/FontSize" />

        <TextView
            android:id="@+id/order_list_callStation"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="联系加油站"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/FontSize" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginBottom="4dp"
        android:background="@color/color_back_gui" />

</LinearLayout>