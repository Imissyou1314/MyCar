<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--消息的Item-->

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#353543"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardElevation="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/message_item_title_text"
                android:textSize="@dimen/BigFontSize"
                android:textStyle="bold"
                android:text="未知"
                android:gravity="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                style="@style/MissLineView"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/message_item_msg_text"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="消息"
                style="@style/MissTextViweStyle"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                style="@style/MissLineView"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:id="@+id/message_item_time_text"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:gravity="center|right"
                android:textSize="@dimen/SmallFontSize"
                android:text="时间"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>