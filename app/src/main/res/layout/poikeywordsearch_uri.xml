<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:gravity="center|right"
    xmlns:miss="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--定位MarKer定就弹出的-->
    <TextView
        android:id="@+id/navi_mapView_marker_title"
        android:layout_width="match_parent"
        android:text="标题"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/BigFontSize"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/navi_mapView_marker_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/navi_mapView_marker_title"
        android:textColor="@android:color/black" />

    <com.miss.imissyou.mycar.ui.RoundImageView
        android:id="@+id/navi_mapView_marker_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        miss:Radiustype="round"
        android:visibility="gone"
        miss:borderRadius="10dp"
        android:layout_below="@+id/navi_mapView_marker_snippet"
        android:background="@drawable/start_uri" />

    <Button
        android:id="@+id/navi_mapView_marker_goBtn"
        android:layout_alignParentBottom="true"
        android:gravity="right|center"
        android:layout_below="@+id/navi_mapView_marker_image"
        android:background="@color/color_carView_background_tran"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:text="到这里去"
        android:textColor="@color/color_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>